@{
    ViewData["Title"] = "Dashboard";
}

<!-- Header principale -->
<div class="text-center mb-5">
    <div class="bg-primary text-white p-5 rounded-3 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;">
        <div class="mb-3">
            <i class="fas fa-glass-whiskey fa-3x text-white"></i>
        </div>
        <h1 class="display-3 fw-bold mb-2">Dashboard WeeSe</h1>
        <p class="lead mb-2">Benvenuto nel sistema di configurazione vetrate professionali</p>
        <p class="mb-0">
            <strong>Ultimo accesso: CORTESE</strong>
        </p>
    </div>
</div>


<!-- Grid delle sezioni principali -->
<div class="row g-4">
    <!-- Gestione Utenze -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-users fa-3x text-primary"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Gestione Utenze</h4>
                <p class="card-text text-muted mb-4">
                    Amministra utenti e permessi del sistema
                </p>
                <a href="#" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>

    <!-- Gestione Listini -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-list fa-3x text-primary"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Gestione Listini</h4>
                <p class="card-text text-muted mb-4">
                    Configura prezzi e listini prodotti
                </p>
                <a href="#" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>

    <!-- Preventivi -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-calculator fa-3x text-success"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Preventivi</h4>
                <p class="card-text text-muted mb-4">
                    Crea e gestisci preventivi clienti
                </p>
                <a asp-controller="Preventivi" asp-action="Index" class="btn btn-success btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>

    <!-- Ordini -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-shopping-cart fa-3x text-warning"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Ordini</h4>
                <p class="card-text text-muted mb-4">
                    Gestisci ordini e stato lavorazioni
                </p>
                <a asp-controller="Ordini" asp-action="Index" class="btn btn-warning btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>

    <!-- Commesse -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-tasks fa-3x text-info"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Commesse</h4>
                <p class="card-text text-muted mb-4">
                    Pianifica e monitora le commesse
                </p>
                <a asp-controller="Commesse" asp-action="Index" class="btn btn-info btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>

    <!-- Reports -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-chart-bar fa-3x text-secondary"></i>
                </div>
                <h4 class="card-title fw-bold mb-3">Reports</h4>
                <p class="card-text text-muted mb-4">
                    Analisi e statistiche di vendita
                </p>
                <a href="#" class="btn btn-secondary btn-lg px-4">
                    <i class="fas fa-arrow-right me-2"></i>Vai
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
        }

    .btn {
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
</style>