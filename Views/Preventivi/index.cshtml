@model IEnumerable<WeeSe.Models.Preventivo>
@{
    ViewData["Title"] = "Preventivi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calculator text-primary"></i>
                        Gestione Preventivi
                    </h1>
                    <small class="text-muted">Totale: @Model.Count() preventivi</small>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuovo Preventivo
                </a>
            </div>

            <!-- Lista Preventivi -->
            <div class="card">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Numero</th>
                                        <th>Cliente</th>
                                        <th>Data</th>
                                        <th>Venditore</th>
                                        <th>Stato</th>
                                        <th class="text-end">Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var preventivo in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@preventivo.Id"
                                                   class="fw-bold text-decoration-none">
                                                    @preventivo.NumeroPreventivo
                                                </a>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-semibold">@preventivo.Cliente</div>
                                                    @if (!string.IsNullOrEmpty(preventivo.Indirizzo))
                                                    {
                                                        <small class="text-muted">@preventivo.Indirizzo</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span>@preventivo.Data.ToString("dd/MM/yyyy")</span>
                                            </td>
                                            <td>@preventivo.Venditore</td>
                                            <td>
                                                <span class="badge @GetStatoBadgeClass(preventivo.Stato)">
                                                    @preventivo.Stato
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@preventivo.Id"
                                                       class="btn btn-outline-primary" title="Visualizza">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@preventivo.Id"
                                                       class="btn btn-outline-secondary" title="Modifica">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger"
                                                            onclick="confirmDelete(@preventivo.Id)" title="Elimina">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calculator fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nessun preventivo trovato</h5>
                            <p class="text-muted">Inizia creando il tuo primo preventivo.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crea Preventivo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Sei sicuro di voler eliminare questo preventivo?')) {
                var form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "Preventivi")/' + id;
                form.submit();
            }
        }
    </script>
}

@functions {
    string GetStatoBadgeClass(StatoPreventivo stato)
    {
        return stato switch
        {
            StatoPreventivo.Bozza => "bg-secondary",
            StatoPreventivo.Inviato => "bg-info",
            StatoPreventivo.Approvato => "bg-success",
            StatoPreventivo.Rifiutato => "bg-danger",
            StatoPreventivo.Confermato => "bg-primary",
            StatoPreventivo.Annullato => "bg-dark",
            _ => "bg-secondary"
        };
    }
}
